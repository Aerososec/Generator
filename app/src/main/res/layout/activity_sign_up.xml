<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_login"
    android:focusableInTouchMode="true"
    tools:context=".ui.registration.RegistrationActivity">

    <!-- Фоновое изображение -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </FrameLayout>

    <!-- Заголовок -->
    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif-monospace"
                android:text="Registration"
                android:textColor="#ffffff"
                android:textSize="32sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="2dp"
                android:background="#deff00" />
        </LinearLayout>
    </LinearLayout>

    <!-- Подзаголовок -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:fontFamily="serif-monospace"
        android:gravity="center"
        android:text="Join our community"
        android:textColor="#9affffff"
        android:textSize="12sp"
        tools:ignore="SmallSp" />

    <!-- Форма регистрации -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <!-- Поле логина -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="#96ffffff"
            app:boxStrokeColor="#96ffffff"
            app:hintTextColor="#96ffffff">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/forLoginSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:drawableEnd="@drawable/person_icon"
                android:drawablePadding="16dp"
                android:fontFamily="serif-monospace"
                android:hint="Login"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textColorHint="#96ffffff"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Поле username -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/usernameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColorHint="#96ffffff"
            app:boxStrokeColor="#96ffffff"
            app:hintTextColor="#96ffffff">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/forUsernameSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:drawableEnd="@drawable/person_icon"
                android:drawablePadding="16dp"
                android:fontFamily="serif-monospace"
                android:hint="Username"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textColorHint="#96ffffff"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Поле пароля -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColorHint="#96ffffff"
            app:boxStrokeColor="#96ffffff"
            app:endIconMode="password_toggle"
            app:endIconTint="#ffffff"
            app:hintTextColor="#96ffffff">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/forPasswordSign"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:drawablePadding="16dp"
                android:fontFamily="serif-monospace"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textColor="#ffffff"
                android:textColorHint="#96ffffff"
                android:textSize="16sp" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Кнопка регистрации -->
        <Button
            android:id="@+id/btnSignUp"
            style="@style/Widget.Material3.ExtendedFloatingActionButton.Tertiary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/shape"
            android:fontFamily="serif-monospace"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:textColor="#96ffffff"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- ProgressBar -->
    <ProgressBar
        android:id="@+id/progressBarReg"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />
</RelativeLayout>